<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="app_res_config_settings_form_view" model="ir.ui.view">
        <field name="name">app.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='social_default_image_setting']" position="after">
                <setting id="blog_default_image_setting" string="Use a meta image by default for blog post background" help="If set, replaces the blog post background image as the meta image.">
                    <field name="sync_blog_meta_background_img"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
